<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".forgot_password">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="447dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_fp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="299dp"
        android:background="@drawable/rectangle_container">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42.9dp"
            android:gravity="top"
            android:text="Enter your registered email ID and we will send you a link\n                                  to reset your password"
            android:textColor="#B33C3C3C" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/textView"
            android:layout_marginStart="30dp"
            android:layout_marginTop="65.51dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btn_bg"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/hva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_alignEnd="@+id/email"
            android:layout_alignRight="@+id/email"
            android:layout_marginLeft="192dp"
            android:layout_marginTop="8.47dp"
            android:text="Have an account? Log In"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hva"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/btnAuth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="42dp"
                android:background="@drawable/login_btn"
                android:text="Request Reset Link"
                android:textColor="#FFF"
                android:paddingTop="5dp"
                android:paddingRight="52dp"
                android:paddingLeft="52dp"
                android:paddingBottom="5dp"
                android:textSize="12sp"
                android:elevation="8dp"/>
        </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>